<section class="bg-gray-50">
  <div class="px-4 py-40 mx-auto max-w-7xl">
    <div
      class="w-full px-0 pt-5 pb-6 mx-auto mt-4 mb-0 space-y-4 bg-transparent border-0 border-gray-200 rounded-lg md:bg-white md:border sm:w-10/12 md:w-8/12 lg:w-6/12 xl:w-4/12 md:px-6 sm:mt-8 sm:mb-5"
    >
      <%- include('../includes/errorMessage.ejs') %> 
      <h1 class="mb-5 text-xl font-light text-left text-gray-800 sm:text-center">Log in to your account</h1>
      <form class="pb-1 space-y-4" method="post" action="/users/login" novalidate>
        <label class="block">
          <span class="block mb-1 text-xs font-medium text-gray-700">Your Email</span>
          <input class="w-full" name="email" type="email" placeholder="Ex. james@bond.com" inputmode="email" required />
        </label>
        <label class="block">
          <span class="block mb-1 text-xs font-medium text-gray-700">Your Password</span>
          <input class="w-full" name="password" type="password" placeholder="some pass" required />
        </label>
        <%- include('../includes/captcha.ejs') %> 
        <div class="flex items-center justify-between">
          <label class="flex items-center">
            <input type="checkbox" class="form-checkbox" name="remember" />
            <span class="block ml-2 text-xs font-medium text-gray-700 cursor-pointer">Remember me</span>
          </label>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" class="w-full mt-5 btn btn-sm btn-primary sm:w-auto sm:mt-0">Login</button>
        </div>
      </form>
    </div>
    <p class="mb-4 space-y-2 text-sm text-left text-gray-600 sm:text-center sm:space-y-0">
      <a href="/users/forget-password" class="w-full btn btn-sm btn-link sm:w-auto">Forgot password</a>
      <a href="/users/register" class="w-full btn btn-sm btn-link sm:w-auto">Create an account</a>
    </p>
  </div>
</section>
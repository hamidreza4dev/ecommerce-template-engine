<section class="bg-gray-50">
  <div class="px-4 py-40 mx-auto max-w-7xl">
    <div
      class="w-full px-0 pt-5 pb-6 mx-auto mt-4 mb-0 space-y-4 bg-transparent border-0 border-gray-200 rounded-lg md:bg-white md:border sm:w-10/12 md:w-8/12 lg:w-6/12 xl:w-4/12 md:px-6 sm:mt-8 sm:mb-5"
    >
      <%- include('../includes/errorMessage.ejs') %> 
      <h1 class="mb-5 text-xl font-light text-left text-gray-800 sm:text-center">Sign up to our product today for free</h1>
      <form class="pb-1 space-y-4" method="post" action="/users/register" novalidate>
        <label class="block">
          <span class="block mb-1 text-xs font-medium text-gray-700">Name</span>
          <input class="w-full" name="fullname" type="text" placeholder="Your full name" required />
        </label>
        <label class="block">
          <span class="block mb-1 text-xs font-medium text-gray-700">Your Email</span>
          <input class="w-full" name="email" type="email" placeholder="Ex. james@bond.com" inputmode="email" required />
        </label>
        <label class="block">
          <span class="block mb-1 text-xs font-medium text-gray-700">Create a password</span>
          <input class="w-full" name="password" type="password" placeholder="••••••••" required />
        </label>
        <label class="block">
          <span class="block mb-1 text-xs font-medium text-gray-700">Confirm your password</span>
          <input class="w-full" name="confirmPassword" type="password" placeholder="••••••••" required />
        </label>
        <%- include('../includes/captcha.ejs') %> 
        <div class="flex flex-col items-start justify-between sm:items-center sm:flex-row">
          <label class="flex items-center">
            <input name="acceptPolicy" type="checkbox" class="form-checkbox" required />
            <span class="block ml-2 text-xs font-medium text-gray-700 cursor-pointer">Agree to Privacy Policy</span>
          </label>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" class="w-full mt-5 btn btn-sm btn-primary sm:w-auto sm:mt-0">Sign up</button>
        </div>
      </form>
    </div>
    <p class="my-0 text-xs font-medium text-center text-gray-700 sm:my-5">
      Already have an account?
      <a href="/users/login" class="text-primary-700 hover:text-primary-900">Sign in</a>
    </p>
  </div>
</section>